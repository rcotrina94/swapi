{
    "compilerOptions": {
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "allowJs": true,
        "outDir": ".build",
        "moduleResolution": "node",

        "lib": ["es2020"],
        "module": "commonjs",
        "target": "es2019",
        "rootDir": "./",
        "typeRoots": [
            "./node_modules/@types",
            "./types",
        ]
    }
}
